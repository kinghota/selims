<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/prefs_main_template/macros/master"
      i18n:domain="senaite.core">


  <head>
    <metal:block fill-slot="javascript_head_slot"
                 tal:define="portal context/@@plone_portal_state/portal;">
    </metal:block>

    <metal:block fill-slot="style_slot"
                 tal:define="portal context/@@plone_portal_state/portal;">
      <style type="text/css">
       #lims-controlpanel {
       }
       .tile {
         width: 100%;
         height: 7em;
         box-sizing: border-box;
         display: inline-block;
         background: #d9edf7;
         padding: 2em;
         margin: auto auto 1em auto;
         overflow: hidden;
         vertical-align: middle;
       }
       .tile .title {
         margin-top: 0px;
         text-transform: uppercase;
         font-weight: bold;
         padding-left: 0.75em;
         text-overflow: ellipsis;
         overflow: hidden;
       }
       .tile .item {
       }
       .tile .icon {
       }
       .tile:hover {
         background: #d9edff;
         text-decoration: none;
       }
      </style>
    </metal:block>

  </head>
  <body>

    <metal:override fill-slot="top_slot"
                    tal:define="disable_column_one python:request.set('disable_plone.leftcolumn', 1);
                                disable_column_two python:request.set('disable_plone.rightcolumn', 1);"/>

    <div metal:fill-slot="prefs_configlet_main" id="lims-controlpanel">

      <h1 class="documentFirstHeading" i18n:translate="">
        SENAITE Setup
      </h1>
      <p class="documentDescription lead" i18n:translate="">
        Configuration area for SENAITE LIMS
      </p>

      <hr/>

      <div class="row">

        <!-- The setup item -->
        <tal:setup tal:define="setup python:view.setup">
          <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2">
            <a class="tile text-capitalized"
               tal:attributes="href setup/absolute_url">

              <div class="row item">
                <div class="col-xs-2">
                  <img src="#"
                       class="icon"
                       tal:attributes="src python:view.get_icon_url(setup);
                                       title setup/Title"/>
                </div>
                <div class="col-xs-9">
                  <div class="title"
                       i18n:translate=""
                       tal:content="setup/Title">
                    Setup Item Title
                  </div>
                </div>
              </div>
            </a>
          </div>
        </tal:setup>

        <tal:controlpanels tal:repeat="cp view/controlpanels">
          <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2">
            <a class="tile text-capitalized"
               tal:attributes="href cp/getURL">

              <div class="row item">
                <div class="col-xs-2">
                  <img src="#"
                       class="icon"
                       tal:attributes="src python:view.get_icon_url(cp);
                                       title cp/Title"/>
                </div>
                <div class="col-xs-9">
                  <div class="title"
                       i18n:translate=""
                       tal:content="cp/Title">
                    Setup Item Title
                  </div>
                </div>
              </div>
            </a>
          </div>
        </tal:controlpanels>
      </div>

    </div>

  </body>
</html>
